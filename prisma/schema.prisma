// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model itinerarios {
  id        Int      @id @default(autoincrement())
  linha     String
  descricao String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  horarios        Horario[]
  linhas_recentes linhas_recentes[]
}

model linhas_recentes {
  id                Int         @id @default(autoincrement())
  anonymous_user_id String
  itinerario_id     Int
  obs               String?
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  itinerario        itinerarios @relation(fields: [itinerario_id], references: [id])

  @@unique([anonymous_user_id, itinerario_id], name: "UserRecentLineUnique")
}

model duvidas {
  id                Int         @id @default(autoincrement())
  anonymous_user_id String
  mensagem          String
  fechado           Boolean     @default(false)
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  respostas         respostas[]
}

model respostas {
  id        Int      @id @default(autoincrement())
  duvida_id Int
  mensagem  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  duvida    duvidas  @relation(fields: [duvida_id], references: [id])
}

model Horario {
  id            Int      @id @default(autoincrement())
  itinerario_id Int
  diaDaSemana   String
  sentido       String
  partidas      String[]

  itinerario itinerarios @relation(fields: [itinerario_id], references: [id])
}
