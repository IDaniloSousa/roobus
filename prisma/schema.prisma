// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model itinerarios {
  id        Int      @id @default(autoincrement())
  linha     String
  descricao String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  horarios        Horario[]
  linhas_recentes linhas_recentes[]
  route_shapes    RouteShape[]
}

model linhas_recentes {
  id                Int         @id @default(autoincrement())
  anonymous_user_id String
  itinerario_id     Int
  obs               String?
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  itinerario        itinerarios @relation(fields: [itinerario_id], references: [id])

  @@unique([anonymous_user_id, itinerario_id], name: "UserRecentLineUnique")
}

model duvidas {
  id                Int         @id @default(autoincrement())
  mensagem          String
  fechado           Boolean     @default(false)
  user_id           Int
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  SystemBus         SystemBus   @relation(fields: [user_id], references: [id])
  respostas         respostas[]
}

model respostas {
  id        Int      @id @default(autoincrement())
  duvida_id Int
  mensagem  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  duvida    duvidas  @relation(fields: [duvida_id], references: [id])
}

model Horario {
  id            Int      @id @default(autoincrement())
  itinerario_id Int
  diaDaSemana   String
  sentido       String
  partidas      String[]

  itinerario itinerarios @relation(fields: [itinerario_id], references: [id])
}

model RouteShape {
  id            Int         @id @default(autoincrement())
  itinerario_id Int
  sentido       String
  coordinates   Json
  startPoint    Json? // Armazena o Ponto A [lat, lng]
  endPoint      Json? // Armazena o Ponto B [lat, lng]
  itinerario    itinerarios @relation(fields: [itinerario_id], references: [id])

  @@unique([itinerario_id, sentido], name: "ItinerarioSentidoUnique")
}

model SystemBus {
  id           Int       @id @default(autoincrement())
  name         String    @db.VarChar(256)
  login        String    @unique @db.VarChar(256)
  password     String    @db.VarChar(256)
  route_number Int       @map("route_number")
  duvidas      duvidas[]

  @@map("system_bus")
}
